/* 页面样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  /* border: 2rpx solid #ddd; */
  /* background-color: #f8f9fa; */
}

.info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

.team {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.team-name {
	margin-top: 10rpx;
	margin-left: 20rpx;
	margin-right: 20rpx;
	font-size: 48rpx;
	font-weight: bold;
  color: #333;
}

.match-details {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-time {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.score {
  display: flex;
  align-items: center;
	font-size: 40rpx;
	font-weight: bold;
  color: #333;
  margin: 10rpx 0;
}

.round {
  font-size: 28rpx;
  color: #888;
}

.timeline {
  margin-top: 20rpx;
  height: 100%;
  overflow: scroll;
  border: 2rpx solid #ddd;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

.timeline-content {
  display: flex;
  width: 100%;
  padding: 20rpx;
}

.teamA-events,
.teamB-events {
  display: flex;
  flex-direction: column;
  width: 50%;
}

.separator {
  width: 4rpx;
  background-color: #ddd;
  height: auto;
  margin: 0 10rpx;
}

.event {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.time-right,
.time-left {
  font-size: 32rpx;
  color: #00b43c;
  font-weight: bold;
}

.time-right {
  text-align: right;
  margin-left: 10rpx;
}

.details-left,
.details-right {
  font-size: 36rpx;
}

.details-left {
  text-align: right;
  flex-grow: 1;
  margin-right: 10rpx;
}

.details-right {
  text-align: left;
  flex-grow: 1;
  margin-left: 10rpx;
}

.time-line {
  width: 4rpx;
  height: 80rpx;
  background-color: #00b43c;
}
