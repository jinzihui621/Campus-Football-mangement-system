/* 添加样式来居中显示按钮，并增加一些视觉样式 */
.centered-button {
  display: block;         /* 使 navigator 像块级元素一样显示 */
  margin: 10px auto;     /* 垂直方向不居中，水平方向居中，并给上下各100px的空间使其看起来居中 */
  padding: 10px 0px;     /* 内边距 */
  text-align: center;     /* 文本居中 */
  background-color: #007aff; /* 背景颜色 */
  color: white;           /* 文字颜色 */
  border-radius: 5px;     /* 边角圆滑 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
  font-size: 16px;        /* 字体大小 */
  width: 60%;             /* 按钮宽度为容器宽度的60% */
}

.custom-border-box {
  width: 90%; /* 盒子宽度占页面宽的80% */
  height: 370px; /* 盒子高度 */
  margin: 20px auto; /* 上下间距20px, 水平居中 */
  border: 2px solid #0000FF; /* 边框宽度为2px，样式为实线，颜色为蓝色 */
  border-radius: 10px; /* 边框圆角为10px */
  display: flex;
  justify-content: center;
  align-items: center;
}

.scroll-view {
  width: 100%; /* scroll-view 宽度填满父容器 */
  height: 100%; /* scroll-view 高度填满父容器 */
  display: block; /* 确保滚动视图是块级元素 */
}

.scroll-item {
  height: 150px; /* 每个滚动项目的高度 */
  background-color: #f0f0f0; /* 背景颜色 */
  margin: 5px 0; /* 间距 */
  text-align: center; /* 文本居中 */
  line-height: 100px; /* 行高使文字垂直居中 */
  color: #333; /* 文本颜色 */
}

