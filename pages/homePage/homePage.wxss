.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  box-sizing: border-box;
}

.swiper-container {
  flex: 3; /* 根据需求调整高度比例 */
	width: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.matches-container {
  flex: 7; /* 根据需求调整高度比例 */
  width: 100%;
  overflow-y: auto;
}

.match {
  border: 1px solid #ccc;
  margin: 10px 0;
  padding: 10px;
}

.no-matches {
  border: 3rpx solid red;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #888;
}
