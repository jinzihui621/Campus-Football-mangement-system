<view class="page-container">
  <!-- 轮播图部分 -->
  <swiper class="swiper-container">
    <swiper-item><image src='/image/tabBar/shouye.png' mode="aspectFit" class="swiper-image" /></swiper-item>
    <swiper-item><image src='/image/tabBar/envelop.png' mode="aspectFit" class="swiper-image" /></swiper-item>
  </swiper>

  <!-- 比赛信息部分 -->
  <scroll-view class="matches-container" scroll-y="true">
    <block wx:if="{{matches.length === 0}}">
      <view class="no-matches">
        <text>目前没有比赛信息</text>
      </view>
    </block>
    <block wx:else>
      <block wx:for="{{matches}}" wx:key="id">
        <view class="match">
          <text>{{item.date}} {{item.time}} {{item.location}}</text>
          <text>{{item.teamA}} {{item.scoreA}} : {{item.scoreB}}</text>
        </view>
      </block>
    </block>
  </scroll-view>
</view>
