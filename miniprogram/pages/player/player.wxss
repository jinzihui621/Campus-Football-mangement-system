/* pages/player/player.wxss */
.card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 10rpx rgba(0, 0, 0, 0.1);
  height: 100vh;
}

.notification{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 88%;
  height: 25%;
  margin:30rpx;
  border-radius: 10rpx;
  border: 2rpx lightgray solid;
}

.headline1{
  display: flex;
  align-items: center;
  width: 640rpx;
  height: 50rpx;
  padding: 15rpx;
  border-radius: 10rpx;
  border-bottom: 2rpx solid lightgray;
  background-color: #068E15;
}

.content{
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  width: 88%;
  height: 244rpx;
  padding:15rpx;
}

.messageInfo{
  padding:8rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  border: lightgreen solid 2rpx;
}

.schedule{
  display: flex;
  align-items: center;
  width: 60%;
  height: 60rpx;
  border-radius: 10rpx;
  border: lightgray 2rpx solid;
}

.schedulePattern{
  margin-left:25%;
  height: 60rpx;
  width: 60rpx;
}

.register{
  width: 88%;
  height: 60%;
  margin-top: 30rpx;
  border-radius: 10rpx;
  border: lightgray 2rpx solid;
  background-color:#068E15;
}

.headline2{
  height: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: lightgray 2rpx solid;
  padding: 15rpx;
}

.gameContainer{
  height: 680rpx;
  width: 100%;
}

.game{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 580rpx;

}

.timeAndPlace{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 60%;
  padding:5rpx;
  border-bottom: solid lightgreen 2rpx;
}

.gameInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 70%;
  justify-content: space-around;
  border: lightgray solid 2rpx;
  border-radius: 10rpx;
  padding:15rpx;
  margin:20rpx;
  background-color: white;
}

.teamInfo{
  display: flex;
  justify-content: space-around;
  width: 70%;
  padding:5rpx;
}