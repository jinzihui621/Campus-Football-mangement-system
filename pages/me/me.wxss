.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx; 
}

.avatar {
  width: 200rpx; 
  height: 200rpx; 
  border-radius: 50%;
  margin-bottom: 20rpx; 
}

.nickname {
  font-size: 36rpx; 
  font-weight: bold;
	margin-bottom: 20rpx; 
}

.role {
  font-size: 28rpx; 
  color: #888;
}

.buttons-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 120rpx; 
}

.button {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30%;
  margin-bottom: 100rpx; 
}

.button image {
  width: 80rpx; 
  height: 80rpx; 
  margin-bottom: 20rpx; 
}
