/* 页面样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100vh;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  background-color: #f8f9fa;
}

.info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 95%;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
	box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	margin-left: 20rpx;
	margin-right: 20rpx;
}

.team {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.team-logo {
  width: 120rpx;
  height: 120rpx;
  background-color: #ccc;
  border-radius: 50%;
}

.team-name {
	margin-top: 10rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
  font-size: 36rpx;
	color: #333;
	font-weight: bold;
}

.match-details {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-time {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.score {
  display: flex;
  align-items: center;
  font-size: 40rpx;
  color: #333;
	margin: 10rpx 0;
	font-weight: bold;
}

.round {
  font-size: 28rpx;
  color: #888;
}

.timeline {
  flex-grow: 1;
  width: 100%;
  margin-top: 20rpx;
  overflow: scroll;
  border: 2rpx solid #ddd;
  background-color: #ffffff;
  border-radius: 20rpx;
	box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

.timeline-content {
  display: flex;
  width: 100%;
  padding: 20rpx;
}

.teamA-events,
.teamB-events {
  display: flex;
  flex-direction: column;
  width: 50%;
}

.separator {
  width: 4rpx;
  background-color: #ddd;
  height: auto;
  margin: 0 10rpx;
}

.event {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.time-right,
.time-left {
  font-size: 32rpx;
  color: #00b43c;
  font-weight: bold;
}

.time-right {
  text-align: right;
  margin-left: 10rpx;
}

.details-left,
.details-right {
  font-size: 36rpx;
}

.details-left {
  text-align: right;
  flex-grow: 1;
  margin-right: 10rpx;
}

.details-right {
  text-align: left;
  flex-grow: 1;
  margin-left: 10rpx;
}

.not-started {
	margin-top: 20rpx;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 36rpx;
  color: #888;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}
